<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.seonoh2.smarttoliet01.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="270dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="로고"
            android:id="@+id/textView5"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="안녕하세요 마려우면 또오리 마또입니다."
            android:id="@+id/textView6"
            android:textSize="15dp"
            android:layout_above="@+id/textView5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저희 마또를 이용하시면 쾌적한 화장실을 이용하실 수 있습니다"
            android:id="@+id/textView7"
            android:textSize="10dp"
            android:layout_below="@+id/textView6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6" />

        <Button
            android:layout_width="200dp"
            android:layout_height="35dp"

            android:text="로그아웃"
            android:id="@+id/button4"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_below="@+id/textView7" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지도보기"
            android:id="@+id/btn_map"
            android:layout_below="@+id/button4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/frameLayout">

        <Button
            android:layout_width="160dp"
            android:layout_height="125dp"
            android:text="불편신고"
            android:id="@+id/btn_report"
            android:layout_gravity="left|bottom"
            android:textSize="28dp" />

        <Button
            android:layout_width="160dp"
            android:layout_height="125dp"
            android:text="설정"
            android:id="@+id/btn_setting"
            android:layout_gravity="right|bottom"
            android:textSize="28dp" />
    </FrameLayout>

    <Button
        android:layout_width="160dp"
        android:layout_height="125dp"
        android:text="OPEN"
        android:id="@+id/btn_open"
        android:layout_gravity="left|top"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/frameLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="136dp" />

    <Button
        android:layout_width="160dp"
        android:layout_height="125dp"
        android:id="@+id/btn_buy"
        android:layout_gravity="right|top"
        android:textSize="28dp"
        android:layout_alignTop="@+id/btn_open"
        android:layout_alignRight="@+id/frameLayout"
        android:layout_alignEnd="@+id/frameLayout"
        tools:text="물품구매"
        android:text="물품구매" />
</RelativeLayout>
